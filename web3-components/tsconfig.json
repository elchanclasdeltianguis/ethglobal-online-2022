{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "declaration": true,
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
